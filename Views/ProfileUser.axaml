<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaApplication1.ProfileUser"
			 xmlns:vm ="using:AvaloniaApplication1.ViewModels"
			 x:DataType="vm:ProfileUserViewModel"
			 xmlns:conv ="using:AvaloniaApplication1.Converters">
	<UserControl.Resources>
		<conv:ImageConverter x:Key="ImgConv"/>
	</UserControl.Resources>
	
	<StackPanel>
		<Button Content="Назад" Command="{Binding ToPageBack}"></Button>
		<Image Height="100" Width="100" Source="{Binding CurrentUser.Image, Converter={StaticResource ImgConv}}"/>
		<Button Command="{Binding AddPhoto}" Content="Изменить фото"/>
		<TextBlock>
			<TextBlock.Text>
				<MultiBinding StringFormat="{}Ваше фио: {0} {1} {2}">
					<Binding Path="CurrentUser.Surname"/>
					<Binding Path="CurrentUser.Name"/>
					<Binding Path="CurrentUser.Patronymic"/>
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>
		<TextBlock>
			<TextBlock.Text>
				<MultiBinding StringFormat="Роль в системе: {0}">
					<Binding Path="CurrentUser.IdRoleNavigation.NameRole"/>
				</MultiBinding>
			</TextBlock.Text>
		</TextBlock>
	</StackPanel>
</UserControl>
